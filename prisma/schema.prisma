generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Team {
  id    Int    @id @default(autoincrement())
  code  String @unique
  name  String @unique
  color String
  users User[]

  @@map("teams")
}

model User {
  id       Int       @id @default(autoincrement())
  teamId   Int       @map("team_id")
  name     String    @unique
  level    Int       @default(1)
  team     Team      @relation(fields: [teamId], references: [id])
  messages Message[]

  @@map("users")
}

model Message {
  id       Int    @id @default(autoincrement())
  authorId Int    @map("author_id")
  body     String
  author   User   @relation(fields: [authorId], references: [id])

  @@map("messages")
}
