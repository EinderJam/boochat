    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "prettier-plugin-jsdoc": "^0.3.23",
    "prettier-plugin-svelte": "^2.4.0",
    "prisma": "^2.30.2",
    "standard-version": "^9.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^22.0.0",
    "svelte-check": "^2.2.5"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": "eslint --fix",
    "*.{css,scss,svelte}": "stylelint --fix",
    "*.{js,cjs,ts,css,scss,html,svelte,json,md,yml}": "prettier --write"
  },
  "scripts": {
    "build": "svelte-kit build",
    "check": "tsc --noEmit & eslint --fix 'src/**/*.{ts,js,svelte}' & stylelint --fix 'src/**/*' & svelte-check --tsconfig ./tsconfig.json &",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "clean": "rm -rf .svelte-kit/ build/",
    "dev": "nodemon -e ts & svelte-kit dev --host &",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "lint": "prettier --ignore-path .gitignore  --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "postinstall": "husky install",
    "preview": "svelte-kit preview",
    "start": "yarn ts-node src/server.ts",
    "ts-node": "node --experimental-specifier-resolution=node --loader ts-node/esm"
  },
  "type": "module",
  "volta": {
    "node": "16.8.0",
    "yarn": "1.22.11"
  }
}
