{
  "name": "boochat",
  "version": "0.0.1",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "hat": "^0.0.3",
    "nodemon": "^2.0.12",
    "polka": "next",
    "sanitize.css": "^12.0.1",
    "sass": "^1.38.0",
    "sirv": "^1.0.14",
    "socket.io": "^4.1.3",
    "socket.io-client": "^4.1.3",
    "svelte": "^3.42.2",
    "svelte-preprocess": "^4.7.4",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "twemoji": "^13.1.0",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@sveltejs/adapter-static": "next",
    "@sveltejs/kit": "next",
    "@types/body-parser": "^1",
    "@types/cors": "^2",
    "@types/eslint-plugin-prettier": "^3",
    "@types/hat": "^0",
    "@types/node": "^16.7.1",
    "@types/polka": "^0.5.3",
    "@types/twemoji": "^12.1.2",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-xo": "^0.38.0",
    "eslint-config-xo-typescript": "^0.44.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-no-unsanitized": "^3.1.5",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-sonarjs": "^0.10.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "eslint-plugin-unicorn": "^35.0.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "prettier-plugin-jsdoc": "^0.3.23",
    "prettier-plugin-svelte": "^2.3.1",
    "standard-version": "^9.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^22.0.0",
    "svelte-check": "^2.2.4"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": "eslint --fix",
    "*.{css,scss,svelte}": "stylelint --fix",
    "*.{js,cjs,ts,css,scss,html,svelte,json,md,yml}": "prettier --write"
  },
  "scripts": {
    "build": "svelte-kit build",
    "check": "tsc --noEmit & eslint --fix 'src/**/*.{ts,js,svelte}' & stylelint --fix 'src/**/*' & svelte-check --tsconfig ./tsconfig.json &",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "dev": "nodemon -e ts & svelte-kit dev &",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "lint": "prettier --ignore-path .gitignore  --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "postinstall": "husky install",
    "preview": "svelte-kit preview",
    "start": "node --loader ts-node/esm src/server.ts"
  },
  "type": "module",
  "volta": {
    "node": "16.7.0",
    "yarn": "1.22.11"
  }
}
